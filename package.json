  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "chalk": "^5.0.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.7.0",
    "vite": "^2.9.9",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
